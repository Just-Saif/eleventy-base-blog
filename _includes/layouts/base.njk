<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		


		<style>
			/* Additional Custom Styles */
			body {
				width: 100%; /* Ensure the body takes full width */
				padding: 0;
				margin: 0;
			}

			header,
			footer {
				background-color: #333;
				color: #fff;
				padding: 1rem;
			}

			.home-link {
				color: #fff;
				font-size: 1.5em;
				font-weight: bold;
				text-decoration: none;
			}

			.navbar-nav .nav-link {
				color: #fff;
			}
		</style>
	</head>
	<body>	
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		<!-- Bootstrap Navbar (Header) -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">
					<img src="https://i.pinimg.com/originals/26/b5/c9/26b5c97560749daa24da66d11e82aecd.jpg" alt="Site Logo" style="height: 40px; width: auto;">
					{{ metadata.title }}
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						{%- for entry in collections.all | eleventyNavigation %}
							<li class="nav-item"><a class="nav-link" href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a></li>
						{%- endfor %}
					</ul>
				</div>
			</div>
		</nav>

